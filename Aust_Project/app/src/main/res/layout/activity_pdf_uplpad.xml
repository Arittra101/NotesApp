<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE8E3"
    tools:context=".pdfUplpad">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
         android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="50dp"
        android:textStyle="bold"
        android:background="@drawable/text_custom_background"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Select PDF File From Storage"
        android:inputType="textPersonName"
        />
    <Button
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_centerHorizontal="true"
        android:text="Upload File"
        android:textSize="20sp"
        android:id="@+id/uploadView"
        android:background="@drawable/button_design"
        android:padding="5dp"
        android:textColor="@color/white"
      />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uploadView"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Retrieve Pdf"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/retrieve"
        android:background="@drawable/button_design"
        android:padding="5dp"
        android:textColor="@color/white"
        />
</RelativeLayout>