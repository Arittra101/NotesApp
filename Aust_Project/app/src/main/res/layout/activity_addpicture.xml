<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addpicture"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8B5ECC"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Image"
        app:titleMarginStart="10dp" />
    <EditText

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar1"
        android:layout_marginTop="20dp"
        android:hint="Enter Picture Title"
        android:inputType="text"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_margin="10dp"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:maxLines="50"


        android:layout_marginTop="20dp"
        android:gravity="top"
        android:hint="Enter any Description"
        android:inputType="textMultiLine"
        android:textSize="17dp"
        android:layout_margin="10dp"/>





<!--    <ProgressBar-->
<!--        android:id="@+id/spinner"-->
<!--        android:visibility="invisible"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="50dp"-->

<!--        android:layout_marginTop="18dp"-->
<!--        android:layout_marginBottom="10dp"-->
<!--        android:backgroundTint="@color/cardview_shadow_start_color"-->
<!--        android:gravity="center"-->
<!--        />-->

    <Button

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/spinner"
        android:text="Select File from your Device"/>

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_image_not_supported_24"

        />
    <Button

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Upload Picture"
        android:textColor="@color/white"
        android:background="#8B5ECC"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>

</RelativeLayout>