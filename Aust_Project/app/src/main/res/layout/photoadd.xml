<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context=".addpicture"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backBTN"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"

                android:backgroundTint="#fafafa"
                android:src="@drawable/leftarrow" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_weight="1.4"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Image Upload"
                 />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_height="250dp">


            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/addphotohint"  />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <Button

                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="#8B5ECC"
                android:layout_marginRight="15dp"
                android:drawableTop="@drawable/takephotos"
                android:background="@drawable/ash_background"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:text="Button" />

            <Button
                android:id="@+id/selectbtn"
                android:layout_width="0dp"
                android:padding="20dp"
                android:background="@drawable/ash_background"
                android:drawableTop="@drawable/addphotos"
                android:textAllCaps="false"
                android:textColor="#8B5ECC"
                android:scaleType="fitCenter"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="Button" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/spinner"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/textView4"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title" />

        <EditText
            android:id="@+id/pictitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:hint="Put Title"
            android:background="@drawable/text_custom_background"
            android:layout_marginEnd="16dp">

        </EditText>

        <TextView

            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description" />

        <EditText
            android:id="@+id/desciption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:hint="Put Description"
            android:background="@drawable/text_custom_background"
            android:layout_marginEnd="16dp">

        </EditText>

        <Button
            android:id="@+id/uploadpicbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:maxLines="50"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_design"
            android:drawableLeft="@drawable/edit"
            android:drawablePadding="16dp"
            android:drawableTint="@color/white"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Upload"
            android:textColor="@color/white" />
    </LinearLayout>

</ScrollView>